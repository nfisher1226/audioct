cat<<EOF

Copyright (C) 2018 Nathan Fisher
set-flac-tags.sh comes with ABSOLUTELY NO WARRANTY.  This program is free
software. You are welcome to redistribute it under certain conditions.
EOF

# Get our canonical prefix and read in functions
SELF="$0"
BINDIR="${SELF%/*}"
PREFIX="${BINDIR%/*}"
. $PREFIX/etc/audioct.conf

# Remove old tags
metaflac --remove-all-tags *.flac
# Get the total tracks
TTN="$(find . -maxdepth 1 -type f -name '*.flac' | wc -l | tr -d ' ')"
# User input
echo -n "Enter Artist name: "
read ARTIST
echo -n "Enter Album name: "
read ALBUM
echo -n "Enter Genre: "
read GENRE
echo -n "Enter Release Date: "
read DATE
echo -n "Enter Disc Number: "
read DISC
echo -n "Enter Total Discs: "
read TOTALDISCS

while read T
do TN=$(cut -f 1 -d ' ') <<< $T
  TT=$(basename "${T}" .flac | cut -f 3- -d ' ')
  metaflac --set-tag="TITLE=${TT}" "${T}"
  metaflac --set-tag="ARTIST=${ARTIST}" "${T}"
  metaflac --set-tag="ALBUM=${ALBUM}" "${T}"
  metaflac --set-tag="DATE=${DATE}" "${T}"
  metaflac --set-tag="GENRE=${GENRE}" "${T}"
  metaflac --set-tag="TRACKNUMBER=${TN}" "${T}"
  metaflac --set-tag="TOTALTRACKS=${TTN}" "${T}"
  metaflac --set-tag="DISCNUMBER=${DISC}" "${T}"
  metaflac --set-tag="TOTALDISCS=${TOTALDISCS}" "${T}"
done <<< $(ls -1 *.flac)

