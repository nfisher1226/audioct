cat<<EOF

Copyright (C) 2018 Nathan Fisher
set-flac-tags.sh comes with ABSOLUTELY NO WARRANTY.  This program is free
software. You are welcome to redistribute it under certain conditions.
EOF

# Get our canonical prefix and read in functions
SELF="$0"
BINDIR="${SELF%/*}"
PREFIX="${BINDIR%/*}"
. $PREFIX/etc/audioct.conf

# Optionally set variables in a file
[ -f tags.txt ] && . tags.txt

# Remove old tags
metaflac --remove-all-tags *.flac
# Get the total tracks
TTN="$(find . -maxdepth 1 -type f -name '*.flac' | wc -l | tr -d ' ')"

# User input
if [ "${ARTIST}" = "" ]
  then echo -n "Enter Artist name: "
  read ARTIST ; fi
if [ "${ALBUM}" = "" ]
  then echo -n "Enter Album name: "
  read ALBUM ; fi
if [ "${GENRE}" = "" ]
  then echo -n "Enter Genre: "
  read GENRE ; fi
if [ "${DATE}" = "" ]
  then echo -n "Enter Release Date: "
  read DATE ; fi
if [ "${DISC}" = "" ]
  then echo -n "Enter Disc Number: "
  read DISC ; fi
if [ "${TOTALDISCS}" = "" ]
  then echo -n "Enter Total Discs: "
  read TOTALDISCS ; fi

metaflac --set-tag="ARTIST=${ARTIST}" *.flac
metaflac --set-tag="ALBUM=${ALBUM}" *.flac
metaflac --set-tag="DATE=${DATE}" *.flac
metaflac --set-tag="GENRE=${GENRE}" *.flac

while read T
do metaflac --set-tag="TITLE=$(basename "${T}" .flac | cut -f 3- -d ' ')" "${T}"
  metaflac --set-tag="TRACKNUMBER=$(cut -f 1 -d ' '<<<${T})" "${T}"
done<<<$(ls -1 *.flac)

metaflac --set-tag="TOTALTRACKS=${TTN}" *.flac
metaflac --set-tag="DISCNUMBER=${DISC}" *.flac
metaflac --set-tag="TOTALDISCS=${TOTALDISCS}" *.flac
