# Get our canonical prefix and read in functions
SELF="$0"
BINDIR="${SELF%/*}"
PREFIX="${BINDIR%/*}"
. $PREFIX/etc/audioct.conf

while read w
  do name="$(basename "$w" .wav)"
  oggenc -q ${ogg_quality} "${w}" -o "${name}.ogg"
  [ "$remove_source" = "true" ] && rm -rf "${flac}" || true
done <<< $(ls -1 *.wav)
