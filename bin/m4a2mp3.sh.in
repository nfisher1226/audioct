cat<<EOF

Copyright (C) 2017 Nathan Fisher
m4a2mp3.sh comes with ABSOLUTELY NO WARRANTY.  This program is free
software. You are welcome to redistribute it under certain conditions.
EOF

# Get our canonical prefix and read in functions
SELF="$0"
BINDIR="${SELF%/*}"
PREFIX="${BINDIR%/*}"
. @@SYSCONFDIR@@/audioct.conf

# Optionally set variables in a file
[ -f tags.txt ] && . tags.txt

# Get the total tracks
TTN="$(find . -maxdepth 1 -type f -name '*.m4a' | wc -l | tr -d ' ')"

# User input
if [ "${ARTIST}" = "" ]
  then echo -n "Enter Artist name: "
  read ARTIST ; fi
if [ "${ALBUM}" = "" ]
  then echo -n "Enter Album name: "
  read ALBUM ; fi
if [ "${GENRE}" = "" ]
  then echo -n "Enter Genre: "
  read GENRE ; fi
if [ "${DATE}" = "" ]
  then echo -n "Enter Release Date: "
  read DATE ; fi

while read T
  do TITLE="$(basename "${T}" .m4a | cut -f 3- -d ' ')"
  TRACKNUMBER="$(cut -f 1 -d ' '<<<${T})"
  faad --stdio "${T}" | lame --preset ${lame_preset} --tt "${TITLE}" \
    --tn "${TRACKNUMBER}/${TTN}" --tl "${ALBUM}" \
    --ta "${ARTIST}" --ty "${DATE}" --tg "${GENRE}" - \
    "${TRACKNUMBER} - ${TITLE}.mp3"
  [ "$remove_source" = "true" ] && rm -rf "${T}" || true
done <<< $(ls -1 *.m4a)
