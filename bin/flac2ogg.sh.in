# Get our canonical prefix and read in functions
SELF="$0"
BINDIR="${SELF%/*}"
PREFIX="${BINDIR%/*}"
. $PREFIX/etc/audioct.conf

while read flac
do tmp=$(mktemp)
   metaflac --export-tags-to=- "${flac}" | sed -e 's/\=/\=\"/g' -e 's/$/\"/g' > ${tmp}
   . $tmp
   # Make sure the tag fields aren't empty
   [ "${TITLE}" = "" ] && TITLE="$(basename \"${flac}\" .flac)"
   [ "${ARTIST}" = "" ] && ARTIST=UNKNOWN
   [ "${ALBUM}" = "" ] && ALBUM=UNKNOWN
   [ "${GENRE}" = "" ] && GENRE=Rock
   [ "${TRACKNUMBER}" = "" ] && TRACKNUMBER=00
   [ "${DATE}" = "" ] && DATE=1900
   flac -cd "${flac}" | oggenc -q ${ogg_quality} -t "${TITLE}" -a "${ARTIST}" \
	-l "${ALBUM}" -d "${DATE}" -N "${TRACKNUMBER}" -G "${GENRE}" \
	-o "${TRACKNUMBER} - ${TITLE}.ogg" -
   rm $tmp
   [ "${remove_source}" = "true" ] && rm -rf "${flac}"
done <<< $(ls -1 *.flac)

