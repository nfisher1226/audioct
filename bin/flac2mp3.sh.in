cat<<EOF

Copyright (C) 2017 Nathan Fisher
flac2mp3.sh comes with ABSOLUTELY NO WARRANTY.  This program is free
software. You are welcome to redistribute it under certain conditions.
EOF

# Get our canonical prefix and read in functions
SELF="$0"
BINDIR="${SELF%/*}"
PREFIX="${BINDIR%/*}"
. $PREFIX/etc/audioct.conf

# Total tracks
TTN="$(find . -maxdepth 1 -type f -name '*.flac' | wc -l)"

while read flac
do tmp=$(mktemp)
   metaflac --export-tags-to=- "${flac}" | sed -e 's/\=/\=\"/g' \
     -e 's/$/\"/g' -e 's:\/:_:g' -e 's:?:_:g' | \
     egrep 'TITLE|ARTIST|ALBUM|GENRE|TRACKNUMBER|DATE' \
     | egrep -v 'ALBUM ARTIST|RELEASE DATE' > ${tmp}
   . $tmp
   # Make sure the tag fields aren't empty
   [ "${TITLE}" = "" ] && TITLE="$(basename \"${flac}\" .flac)"
   [ "${ARTIST}" = "" ] && ARTIST=UNKNOWN
   [ "${ALBUM}" = "" ] && ALBUM=UNKNOWN
   [ "${GENRE}" = "" ] && GENRE=Rock
   [ "${TRACKNUMBER}" = "" ] && TRACKNUMBER=00
   [ "${DATE}" = "" ] && DATE=1900
   flac -cd "${flac}" | lame --preset ${lame_preset} --tt "${TITLE}" \
     --ta "${ARTIST}" --tl "${ALBUM}" --ty "${DATE}" --tn \
     "${TRACKNUMBER}/${TTN}" --tg "${GENRE}" - "${TRACKNUMBER} - ${TITLE}.mp3"
   rm $tmp
   [ "$remove_source" = "true" ] && rm -rf "${flac}" || true
done <<< $(ls -1 *.flac)

